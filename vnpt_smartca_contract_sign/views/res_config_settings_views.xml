<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form_smartca" model="ir.ui.view">
        <field name="name">res.config.settings.smartca</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//app[@name='general_settings']" position="inside">
                <block title="VNPT SmartCA" name="vnpt_smartca_block">
                    <setting string="Base URL">
                        <field name="smartca_base_url"/>
                    </setting>
                    <setting string="SP ID">
                        <field name="smartca_sp_id"/>
                    </setting>
                    <setting string="SP Password">
                        <field name="smartca_sp_password" password="True"/>
                    </setting>
                    <setting string="Timeout (seconds)">
                        <field name="smartca_timeout"/>
                    </setting>
                    <setting string="Poll batch size">
                        <field name="smartca_poll_limit"/>
                    </setting>
                </block>
            </xpath>
        </field>
    </record>
</odoo>