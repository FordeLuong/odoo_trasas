<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- ========================================== -->
    <!-- CSS TÙY CHỈNH CHO GIỐNG FACEBOOK -->
    <!-- ========================================== -->
    <template id="portal_custom_css" inherit_id="portal.frontend_layout" priority="10">
        <xpath expr="//head" position="inside">
            <style>body {
                    background-color: #f0f2f5; /* Màu nền xám đặc trưng của FB */
                }
                .social-card {
                    border-radius: 8px;
                    border: none;
                    box-shadow: 0 1px 2px rgba(0, 0, 0, 0.1);
                    background: #fff;
                    margin-bottom: 16px;
                }
                .social-btn {
                    color: #65676b;
                    font-weight: 600;
                    padding: 8px 0;
                    border-radius: 4px;
                    transition: 0.2s;
                }
                .social-btn:hover {
                    background-color: #f0f2f5;
                    color: #1877f2; /* Màu xanh FB */
                    text-decoration: none;
                }
                .app-icon-wrapper {
                    width: 36px;
                    height: 36px;
                    border-radius: 50%;
                    display: flex;
                    align-items: center;
                    justify-content: center;
                    font-size: 18px;
                }
                .sidebar-link {
                    display: flex;
                    align-items: center;
                    padding: 8px;
                    border-radius: 8px;
                    color: #050505;
                    font-weight: 500;
                    text-decoration: none;
                    transition: 0.2s;
                }
                .sidebar-link:hover {
                    background-color: #e4e6eb;
                    color: #050505;
                }
                .input-fake {
                    background-color: #f0f2f5;
                    border-radius: 20px;
                    padding: 8px 12px;
                    color: #65676b;
                    cursor: pointer;
                }
                .input-fake:hover {
                    background-color: #e4e6eb;
                }
                /* MOBILE APP GRID STYLES - REDESIGN */
                .mobile-app-grid {
                    display: grid;
                    grid-template-columns: repeat(3, 1fr);
                    gap: 20px 12px; /* More vertical gap */
                    margin-bottom: 30px;
                    padding: 0 10px;
                }
                .mobile-app-item {
                    display: flex;
                    flex-direction: column;
                    align-items: center;
                    justify-content: flex-start;
                    /* Removed background and shadow for cleaner look like iOS */
                    background: transparent; 
                    box-shadow: none;
                    text-decoration: none !important;
                    color: #333;
                    transition: transform 0.1s;
                }
                .mobile-app-item:active {
                    transform: scale(0.95);
                    opacity: 0.8;
                }
                .mobile-app-icon {
                    width: 56px;
                    height: 56px;
                    border-radius: 16px; /* Rounded square */
                    display: flex;
                    align-items: center;
                    justify-content: center;
                    font-size: 24px;
                    color: #fff !important; /* White icon */
                    margin-bottom: 8px;
                    box-shadow: 0 4px 10px rgba(0,0,0,0.15); /* Soft shadow */
                }
                .mobile-app-label {
                    font-size: 13px;
                    font-weight: 500;
                    text-align: center;
                    color: #444;
                    line-height: 1.2;
                    display: -webkit-box;
                    -webkit-line-clamp: 2;
                    -webkit-box-orient: vertical;
                    overflow: hidden;
                    margin-top: 4px;
                }</style>
        </xpath>
    </template>
    <!-- ========================================== -->
    <!-- PORTAL HOME - GIAO DIỆN SOCIAL MEDIA -->
    <!-- ========================================== -->
    <template id="portal_my_home_inherit" name="Portal Social Feed" inherit_id="portal.portal_my_home" priority="99">
        <!-- Ẩn các phần thừa thãi mặc định -->
        <xpath expr="//div[@id='portal_common_category']" position="attributes">
            <attribute name="style">display: none !important;</attribute>
        </xpath>
        <xpath expr="//t[@t-set='my_details']" position="attributes">
            <attribute name="t-value">False</attribute>
        </xpath>
        <xpath expr="//div[hasclass('o_portal_my_home')]" position="attributes">
            <attribute name="class" add="d-none" separator=" " />
        </xpath>
        <!-- LAYOUT MỚI -->
        <xpath expr="//div[hasclass('o_portal_my_home')]" position="before">
            <div class="container mb-5">
                <div class="row">
                    <!-- CỘT TRÁI: APPS NAV (Giống Menu trái FB) -->
                    <div class="col-lg-3 d-none d-lg-block">
                        <div class="sticky-top" style="top: 80px; z-index: 1; max-height: calc(100vh - 100px); overflow-y: auto;">
                            <div class="social-card p-2">
                                <!-- Profile Mini -->
                                <a href="/my/update_info" class="sidebar-link mb-2">
                                    <img t-att-src="image_data_uri(user.partner_id.avatar_128)" class="rounded-circle me-3" style="width: 36px; height: 36px; object-fit: cover;" />
                                    <span t-esc="user.name" />
                                </a>
                                <hr class="my-2 text-muted" />
                                <!-- App Shortcuts -->
                                <div class="text-muted fw-bold px-2 mb-2" style="font-size: 13px;">ỨNG DỤNG</div>
                                <a href="/my/update_info" class="sidebar-link">
                                    <div class="app-icon-wrapper me-3" style="background: #e3f2fd; color: #1976d2;">
                                        <i class="fa fa-user" />
                                    </div>
                                    <span>Thông tin cá nhân</span>
                                </a>
                                <!-- Approval App - Chỉ hiện cho Manager có nhân viên cấp dưới -->
                                <t t-if="is_manager">
                                    <a href="/my/approvals" class="sidebar-link">
                                        <div class="app-icon-wrapper me-3" style="background: #fff3e0; color: #ff9800;">
                                            <i class="fa fa-check-square-o" />
                                        </div>
                                        <span class="d-flex align-items-center justify-content-between flex-grow-1">
                                            Duyệt yêu cầu
                                            <t t-if="approval_count">
                                                <span class="badge rounded-pill bg-danger ms-2" t-esc="approval_count"/>
                                            </t>
                                        </span>
                                    </a>
                                </t>
                                <!-- More Apps Level 1 -->
                                <div id="moreApps1" class="collapse">
                                    <!--
                                    <a href="/my/rocks" class="sidebar-link">
                                        <div class="app-icon-wrapper me-3" style="background: #ffebee; color: #d32f2f;">
                                            <i class="fa fa-bullseye" />
                                        </div>
                                        <span>Mục tiêu (Rocks)</span>
                                    </a>
                                  
                                    <a href="/my/expenses" class="sidebar-link">
                                        <div class="app-icon-wrapper me-3" style="background: #fce4ec; color: #c2185b;">
                                            <i class="fa fa-credit-card" />
                                        </div>
                                        <span>Chi phí (Expenses)</span>
                                    </a>
                                    -->
                                    <a href="/my/settings" class="sidebar-link">
                                        <div class="app-icon-wrapper me-3" style="background: #eceff1; color: #455a64;">
                                            <i class="fa fa-cog" />
                                        </div>
                                        <span>Cài đặt</span>
                                    </a>
                                </div>
                                <!-- More Apps Level 2 -->
                                <div id="moreApps2" class="collapse">
                                    <a href="/my/resignation" class="sidebar-link" onclick="return confirm('Bạn có chắc chắn muốn xin thôi việc không?');">
                                        <div class="app-icon-wrapper me-3" style="background: #ffe0e0ff; color: #ff0101ff;">
                                            <i class="fa fa-sign-out" />
                                        </div>
                                        <span>Xin nghỉ</span>
                                    </a>
                                </div>
                                <!-- Control Buttons -->
                                <!-- Button 1: Xem thêm (Hiện Lv1, Ẩn chính nó, Hiện Btn2) -->
                                <div id="btnShowMore1" class="collapse show">
                                    <a role="button" data-bs-toggle="collapse" data-bs-target="#moreApps1, #btnShowMore1, #btnShowMore2" class="sidebar-link text-primary justify-content-center mt-1">
                                        <i class="fa fa-chevron-down me-2" />
                                        Xem thêm
                                    </a>
                                </div>
                                <!-- Button 2: Xem thêm (Hiện Lv2, Ẩn chính nó, Hiện Collapse) -->
                                <div id="btnShowMore2" class="collapse">
                                    <a role="button" data-bs-toggle="collapse" data-bs-target="#moreApps2, #btnShowMore2, #btnCollapse" class="sidebar-link text-primary justify-content-center mt-1">
                                        <i class="fa fa-chevron-down me-2" />
                                        Xem thêm
                                    </a>
                                </div>
                                <!-- Button 3: Thu gọn (Ẩn Lv1, Lv2, Ẩn chính nó, Hiện Btn1) -->
                                <div id="btnCollapse" class="collapse">
                                    <a role="button" data-bs-toggle="collapse" data-bs-target="#moreApps1, #moreApps2, #btnCollapse, #btnShowMore1" class="sidebar-link text-primary justify-content-center mt-1">
                                        <i class="fa fa-chevron-up me-2" />
                                        Thu gọn
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- CỘT GIỮA: NEWS FEED (Trung tâm) -->
                    <div class="col-lg-6">
                        <t t-set="news_view" t-value="request.params.get('news_view') == 'full'"/>
                        
                        <!-- MOBILE: Back Button (Chỉ hiện ở Full Mode) -->
                        <div class="d-lg-none mb-3" t-if="news_view">
                            <a href="/my/home" class="btn btn-light btn-sm mb-2">
                                <i class="fa fa-arrow-left me-1"/> Quay lại
                            </a>
                            <h4 class="mb-0">Tin tức doanh nghiệp</h4>
                        </div>
                        
                        <!-- CREATE POST SECTION (Only for HR) -->
                        <div t-if="can_post_news" t-attf-class="social-card p-3 mb-3 #{'d-none d-lg-block' if not news_view else ''}">
                            <div class="d-flex">
                                <img t-att-src="image_data_uri(user.partner_id.avatar_128)" class="rounded-circle me-2" style="width: 40px; height: 40px; object-fit: cover;" />
                                <div class="flex-grow-1">
                                    <form action="/my/news/post" method="POST">
                                        <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                                        <div class="input-fake mb-2" data-bs-toggle="collapse" data-bs-target="#postForm" aria-expanded="false">
                                            Bạn đang nghĩ gì, <t t-esc="user.name"/>?
                                        </div>
                                        <div class="collapse" id="postForm">
                                            <textarea name="content" class="form-control mb-2" rows="3" placeholder="Chia sẻ tin tức, thông báo..."></textarea>
                                            <div class="d-flex justify-content-end">
                                                <button type="submit" class="btn btn-primary btn-sm">
                                                    <i class="fa fa-paper-plane me-1"/> Đăng bài
                                                </button>
                                            </div>
                                        </div>
                                    </form>
                                </div>
                            </div>
                            <hr class="my-2" />
                            <div class="d-flex justify-content-around">
                                <div class="social-btn w-100 text-center">
                                    <i class="fa fa-video-camera text-danger me-2"></i>Live Video
                                </div>
                                <div class="social-btn w-100 text-center">
                                    <i class="fa fa-file-image-o text-success me-2"></i>Ảnh/Video
                                </div>
                                <div class="social-btn w-100 text-center">
                                    <i class="fa fa-smile-o text-warning me-2"></i>Cảm xúc
                                </div>
                            </div>
                        </div>


                        <!-- DANH SÁCH BÀI VIẾT (FEED) -->
                        


                        
                        <!-- Xác định danh sách bài viết cần hiển thị -->
                        <!-- Logic Rendering: 
                             On Mobile Default: Show 1 post.
                             On Mobile Full: Show All.
                             On Desktop: Show All.
                        -->
                         
                        <t t-foreach="blog_posts or []" t-as="post">
                            <!-- Show post if:
                                 1. It's the first post (post_index == 0)
                                 2. OR we are in Full Mode (news_view)
                                 3. OR we are on Desktop (d-none d-lg-block logic needed? No, we can't context switch easily)
                                 
                                 Alternative: Loop ALL, but wrap 2nd+ posts in 'd-none d-lg-block' class if in Widget Mode?
                            -->
                            <!-- Widget Mode Constraint: 33vh on mobile, flex layout to handle image -->
                            <div t-attf-class="social-card pb-1 #{'d-none d-lg-block' if (post_index > 0 and not news_view) else ''}">
                                
                                <!-- MOBILE WIDGET HEADER (Only inside first post, Widget Mode) -->
                                <div class="d-lg-none px-3 py-2 border-bottom d-flex align-items-center justify-content-between flex-shrink-0" 
                                     t-if="post_index == 0 and not news_view"
                                     style="background: rgba(248, 249, 250, 0.5);">
                                    <span class="fw-bold" style="color: #4a4a4a; font-size: 15px;">McDonald's Blog</span>
                                    <a href="/my/home?news_view=full" class="text-decoration-none fw-bold" style="font-size: 13px; color: #1877f2;">
                                        Xem tất cả <i class="fa fa-angle-right ms-1"/>
                                    </a>
                                </div>

                                <!-- Post Header -->
                                <div class="p-3 d-flex align-items-start justify-content-between flex-shrink-0">
                                    <div class="d-flex">
                                        <img t-att-src="image_data_uri(post.author_id.avatar_128) if post.author_id else '/web/static/img/placeholder.png'" class="rounded-circle me-3 border" style="width: 40px; height: 40px; object-fit: cover;" />
                                        <div>
                                            <h6 class="mb-0 fw-bold text-dark">
                                                <t t-esc="post.author_id.name if post.author_id else 'Công ty'" />
                                            </h6>
                                            <small class="text-muted" style="font-size: 12px;">
                                                <t t-esc="post.post_date" t-options="{'widget': 'date'}" />
                                                <span class="mx-1">•</span>
                                                <i class="fa fa-globe" />
                                            </small>
                                        </div>
                                    </div>
                                    <div class="dropdown">
                                        <button class="btn btn-link text-muted p-0 text-decoration-none" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                            <i class="fa fa-ellipsis-h" />
                                        </button>
                                        <ul class="dropdown-menu dropdown-menu-end">
                                            <t t-if="can_post_news">
                                                <li>
                                                    <a class="dropdown-item text-danger" t-att-href="'/my/news/post/delete/%s' % post.id" onclick="return confirm('Bạn có chắc muốn xóa bài viết này không?');">
                                                        <i class="fa fa-trash me-2"/> Xóa bài viết
                                                    </a>
                                                </li>
                                            </t>
                                        </ul>
                                    </div>
                                </div>
                                <!-- Post Content -->
                                <div class="px-3 pb-2 flex-shrink-0">
                                    <h5 class="mb-2 fw-normal" style="font-size: 16px; line-height: 1.4; max-height: 2.8em; overflow: hidden; display: -webkit-box; -webkit-line-clamp: 2; -webkit-box-orient: vertical;">
                                        <a t-att-href="'/blog/%s/%s' % (slug(post.blog_id), slug(post))" class="text-dark text-decoration-none">
                                            <t t-esc="post.name" />
                                        </a>
                                    </h5>
                                    <!-- Hide subtitle in widget mode to save space -->
                                    <p t-if="post.subtitle and (news_view or post_index > 0)" t-esc="post.subtitle" class="mb-2 text-muted" />
                                </div>
                                <!-- Post Cover Image -->
                                <t t-set="cover_url" t-value="get_cover_image_url(post)" />
                                <t t-if="cover_url">
                                    <a t-att-href="'/blog/%s/%s' % (slug(post.blog_id), slug(post))" class="text-decoration-none d-block">
                                        <img t-att-src="cover_url" class="w-100" style="height: auto;" alt="Cover" />
                                    </a>
                                </t>
                                <!-- Stats removed - directly show Comment button -->
                                <hr class="my-0 mx-3 flex-shrink-0" style="opacity: 0.1;" />
                                <!-- Action Button -->
                                <div class="px-3 py-1 d-flex justify-content-center flex-shrink-0">
                                    <a t-att-href="'/blog/%s/%s#discussion' % (slug(post.blog_id), slug(post))" class="btn btn-link social-btn text-decoration-none text-center text-muted">
                                        <i class="fa fa-comment-o me-2" />
                                        Bình luận
                                    </a>
                                </div>
                            </div>
                        </t>
                        <!-- Empty State -->
                        <t t-if="not blog_posts">
                            <div class="social-card p-5 text-center">
                                <img src="/web/static/img/smiling_face.svg" style="width: 80px; opacity: 0.5;" class="mb-3" />
                                <h5 class="text-muted">Bảng tin đang trống</h5>
                                <p class="text-muted small">Hãy quay lại sau nhé!</p>
                            </div>
                        </t>

                        <!-- MOBILE APP GRID (Hiển thị dưới Blog ở mobile, chỉ khi KHÔNG ở Full News Mode) -->
                        <div class="d-lg-none mt-4" t-if="not news_view">
                            <div class="mobile-app-grid">
                                <!-- Profile -->
                                <a href="/my/update_info" class="mobile-app-item">
                                    <div class="mobile-app-icon" style="background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);">
                                        <i class="fa fa-user" />
                                    </div>
                                    <span class="mobile-app-label">Cá nhân</span>
                                </a>
                                <!-- Payslips -->
                                <!-- Discipline -->
                                <a href="/my/disciplines" class="mobile-app-item">
                                    <div class="mobile-app-icon" style="background: linear-gradient(135deg, #fce38a 0%, #f38181 100%);">
                                        <i class="fa fa-exclamation-triangle" />
                                    </div>
                                    <span class="mobile-app-label">Viết Bảng Tường Trình</span>
                                </a>
                                <!-- Elearning - Education -->
                                <!-- Company Profile -->
                                <a href="/my/skills" class="mobile-app-item">
                                    <div class="mobile-app-icon" style="background: linear-gradient(135deg, #5efce8 0%, #736efe 100%);">
                                        <i class="fa fa-star" />
                                    </div>
                                    <span class="mobile-app-label">Company Profile</span>
                                </a>
                                <!-- Shifts -->
                                
                                <!-- Manager Approvals -->
                                <t t-if="is_manager">
                                    <a href="/my/approvals" class="mobile-app-item">
                                        <div class="mobile-app-icon position-relative" style="background: linear-gradient(135deg, #f6d365 0%, #fda085 100%);">
                                            <i class="fa fa-check-square-o" />
                                            <t t-if="approval_count">
                                                <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger border border-light p-1" style="font-size: 8px;">
                                                    <t t-esc="approval_count"/>
                                                </span>
                                            </t>
                                        </div>
                                        <span class="mobile-app-label">Duyệt yêu cầu</span>
                                    </a>
                                </t>

                                <!-- Team -->
                                <!-- Rewards (Toggle Submenu) -->
                                <!-- Resignation -->
                                <a href="/my/resignation" class="mobile-app-item" onclick="return confirm('Bạn có chắc chắn muốn xin thôi việc không?');">
                                    <div class="mobile-app-icon" style="background: linear-gradient(135deg, #ff0844 0%, #ffb199 100%);">
                                        <i class="fa fa-sign-out" />
                                    </div>
                                    <span class="mobile-app-label">Xin nghỉ</span>
                                </a>
                                <!-- Settings -->
                                <a href="/my/settings" class="mobile-app-item">
                                    <div class="mobile-app-icon" style="background: linear-gradient(135deg, #30cfd0 0%, #330867 100%);">
                                        <i class="fa fa-cog" />
                                    </div>
                                    <span class="mobile-app-label">Cài đặt</span>
                                </a>
                            </div>
                            
                            <!-- REWARDS SUB-MENU -->
                            <div id="rewardsMenu" class="collapse mt-2">
                                <div class="bg-white rounded p-3 shadow-sm border">
                                    <h6 class="text-muted fw-bold mb-2 small text-uppercase">Menu Đổi thưởng</h6>
                                    <div class="row g-2">
                                        <!-- Vouchers -->
                                        <div class="col-6">
                                            <a href="/my/vouchers" class="d-flex align-items-center p-2 rounded bg-light text-decoration-none text-dark border">
                                                <i class="fa fa-ticket text-danger me-2"/> <span>Đổi quà</span>
                                            </a>
                                        </div>
                                        <!-- History -->
                                        <div class="col-6">
                                            <a href="/my/vouchers/history" class="d-flex align-items-center p-2 rounded bg-light text-decoration-none text-dark border">
                                                <i class="fa fa-history text-secondary me-2"/> <span>Lịch sử</span>
                                            </a>
                                        </div>
                                        <!-- EOTQ -->
                                        <div class="col-6">
                                            <a href="/my/eotq" class="d-flex align-items-center p-2 rounded bg-light text-decoration-none text-dark border">
                                                <i class="fa fa-trophy text-warning me-2"/> <span>EOTQ</span>
                                            </a>
                                        </div>
                                        <!-- Evaluations -->
                                        <div class="col-6">
                                            <a href="/my/shift_evaluations" class="d-flex align-items-center p-2 rounded bg-light text-decoration-none text-dark border">
                                                <i class="fa fa-star-half-o text-primary me-2"/> <span>Đánh giá</span>
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- CỘT PHẢI: WIDGETS (Sự kiện, Thông báo) -->
                    <div class="col-lg-3 d-none d-lg-block">
                        <!-- Widget: Sinh nhật / Sự kiện -->
                        <div class="social-card p-3">
                            <h6 class="text-muted fw-bold mb-3" style="font-size: 13px;">SỰ KIỆN SẮP TỚI</h6>
                            <t t-if="upcoming_events">
                                <t t-foreach="upcoming_events" t-as="event">
                                    <div class="d-flex align-items-center mb-3">
                                        <div t-attf-class="rounded bg-#{event.color} text-white d-flex flex-column align-items-center justify-content-center me-3" style="width: 50px; height: 50px;">
                                            <span style="font-size: 10px; font-weight: bold;">THG <t t-esc="event.date.strftime('%m')"/></span>
                                            <span style="font-size: 18px; font-weight: bold;"><t t-esc="event.date.strftime('%d')"/></span>
                                        </div>
                                        <div>
                                            <div class="fw-bold text-dark" style="font-size: 14px;"><t t-esc="event.name"/></div>
                                            <small class="text-muted">
                                                <t t-if="event.location"><t t-esc="event.location"/> • </t>
                                                <t t-esc="event.date.strftime('%H:%M')"/>
                                            </small>
                                        </div>
                                    </div>
                                </t>
                            </t>
                            <t t-else="">
                                <div class="text-center text-muted small py-3">
                                    Chưa có sự kiện nào sắp tới
                                </div>
                            </t>
                        </div>
                        <!-- Widget: Footer -->
                        <div class="text-muted small px-2">
                            <a href="#" class="text-muted text-decoration-none">Quyền riêng tư</a>
                            •
                            <a href="#" class="text-muted text-decoration-none">Điều khoản</a>
                            •
                            <a href="#" class="text-muted text-decoration-none">Odoo Portal © 2026</a>
                        </div>
                    </div>
                </div>
            </div>
        </xpath>
    </template>
    <!-- Các template con cho từng App giữ nguyên như cũ, chỉ thừa hưởng layout mới -->
    <template id="portal_app_base" name="Portal App Base">
        <t t-call="portal.portal_layout">
