<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="action_docusign_connector_action_partner" model="ir.actions.act_window">
        <field name="name">Docusign Connectors</field>
        <field name="res_model">docusign.connector</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('contact_id', '=', active_id)]</field>
    </record>

    <record model="ir.ui.view" id="view_partner_form_inherit_docusign">
        <field name="name">res.partner.form.docusign</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet" position="before">
                <header>
                    <button name="action_get_signature" string="Get Signature" type="object" class="oe_highlight"/>
                </header>
            </xpath>
            <xpath expr="//div[@name='button_box']" position="inside">
                <button name="%(odoo_docusign.action_docusign_connector_action_partner)d" type="action" class="oe_stat_button" icon="fa-envelope">
                    <field name="docusign_connector_ids" widget="statinfo" string="Docusign Docs"/>
                </button>
            </xpath>
        </field>
    </record>

