<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Form View cho Wizard Từ chối -->
    <record id="view_contract_reject_wizard_form" model="ir.ui.view">
        <field name="name">trasas.contract.reject.wizard.form</field>
        <field name="model">trasas.contract.reject.wizard</field>
        <field name="arch" type="xml">
            <form string="Từ chối Hợp đồng">
                <group>
                    <field name="contract_id" readonly="1"/>
                    <field name="rejection_reason" 
                           placeholder="Nhập lý do từ chối hợp đồng..."
                           widget="text"/>
                </group>
                <footer>
                    <button name="action_confirm_reject" 
                            string="Xác nhận Từ chối" 
                            type="object" 
                            class="btn-danger"/>
                    <button string="Hủy" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
