<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- ============ STAGE LIST VIEW ============ -->
    <record id="view_contract_stage_list" model="ir.ui.view">
        <field name="name">trasas.contract.stage.list</field>
        <field name="model">trasas.contract.stage</field>
        <field name="arch" type="xml">
            <list string="Giai đoạn Hợp đồng" editable="bottom">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="legend_normal"/>
                <field name="legend_blocked"/>
                <field name="legend_done"/>
                <field name="fold"/>
            </list>
        </field>
    </record>

    <!-- ============ STAGE FORM VIEW ============ -->
    <record id="view_contract_stage_form" model="ir.ui.view">
        <field name="name">trasas.contract.stage.form</field>
        <field name="model">trasas.contract.stage</field>
        <field name="arch" type="xml">
            <form string="Giai đoạn Hợp đồng">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="sequence"/>
                            <field name="fold"/>
                        </group>
                        <group>
                            <field name="legend_normal"/>
                            <field name="legend_blocked"/>
                            <field name="legend_done"/>
                        </group>
                    </group>
                    <group>
                        <field name="requirements" placeholder="Mô tả yêu cầu ở giai đoạn này..."/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- ============ STAGE ACTION ============ -->
    <record id="action_contract_stage" model="ir.actions.act_window">
        <field name="name">Giai đoạn Hợp đồng</field>
        <field name="res_model">trasas.contract.stage</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Tạo giai đoạn hợp đồng đầu tiên
            </p>
            <p>
                Giai đoạn giúp tổ chức hợp đồng trên Kanban board.
            </p>
        </field>
    </record>
</odoo>
