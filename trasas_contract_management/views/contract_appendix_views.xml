<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- ============ FORM VIEW ============ -->
    <record id="view_contract_appendix_form" model="ir.ui.view">
        <field name="name">trasas.contract.appendix.form</field>
        <field name="model">trasas.contract.appendix</field>
        <field name="arch" type="xml">
            <form string="Phụ lục Hợp đồng">
                <header>
                    <button name="action_confirm_signed" 
                            string="Xác nhận đã ký" 
                            type="object" 
                            class="btn-primary"
                            invisible="state != 'draft'"/>
                    <button name="action_set_to_draft" 
                            string="Đặt về nháp" 
                            type="object" 
                            invisible="state != 'signed'"/>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Số phụ lục / Tên phụ lục..."/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="contract_id" readonly="1"/>
                            <field name="sign_date"/>
                        </group>
                        <group>
                            <field name="scan_file" filename="scan_filename"/>
                            <field name="scan_filename" invisible="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Nội dung" name="content">
                            <field name="content" nolabel="1" placeholder="Nội dung chi tiết của phụ lục..."/>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <!-- ============ LIST VIEW ============ -->
    <record id="view_contract_appendix_list" model="ir.ui.view">
        <field name="name">trasas.contract.appendix.list</field>
        <field name="model">trasas.contract.appendix</field>
        <field name="arch" type="xml">
            <list string="Phụ lục Hợp đồng">
                <field name="name"/>
                <field name="contract_id"/>
                <field name="sign_date"/>
                <field name="state" widget="badge" decoration-success="state == 'signed'"/>
            </list>
        </field>
    </record>
</odoo>
