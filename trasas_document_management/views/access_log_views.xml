<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- LIST VIEW: Lịch sử truy cập -->
    <record id="trasas_doc_access_log_view_list" model="ir.ui.view">
        <field name="name">trasas.doc.access.log.list</field>
        <field name="model">trasas.doc.access.log</field>
        <field name="arch" type="xml">
            <list string="Lịch sử truy cập" create="0" edit="0">
                <field name="access_date"/>
                <field name="user_id" widget="many2one_avatar_user"/>
                <field name="document_id"/>
                <field name="action" widget="badge"/>
                <field name="detail"/>
                <field name="ip_address"/>
            </list>
        </field>
    </record>

    <!-- SEARCH VIEW: Lịch sử truy cập -->
    <record id="trasas_doc_access_log_view_search" model="ir.ui.view">
        <field name="name">trasas.doc.access.log.search</field>
        <field name="model">trasas.doc.access.log</field>
        <field name="arch" type="xml">
            <search string="Tìm lịch sử truy cập">
                <field name="user_id"/>
                <field name="document_id"/>
                <separator/>
                <filter string="Hôm nay" name="filter_today" domain="[('access_date', '&gt;=', context_today().strftime('%Y-%m-%d'))]"/>
                <filter string="Tuần này" name="filter_this_week" domain="[('access_date', '&gt;=', (context_today() - datetime.timedelta(days=7)).strftime('%Y-%m-%d'))]"/>
                <separator/>
                <filter string="Người dùng" name="group_by_user" context="{'group_by':'user_id'}"/>
                <filter string="Tài liệu" name="group_by_document" context="{'group_by':'document_id'}"/>
                <filter string="Hành động" name="group_by_action" context="{'group_by':'action'}"/>
            </search>
        </field>
    </record>

    <!-- ACTION: Lịch sử truy cập -->
    <record id="action_doc_access_log" model="ir.actions.act_window">
        <field name="name">Lịch sử truy cập</field>
        <field name="res_model">trasas.doc.access.log</field>
        <field name="view_mode">list</field>
        <field name="search_view_id" ref="trasas_doc_access_log_view_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Chưa có lịch sử truy cập nào!
            </p>
        </field>
    </record>
</odoo>
