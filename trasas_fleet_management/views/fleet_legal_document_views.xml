<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="fleet_legal_document_view_form" model="ir.ui.view">
        <field name="name">fleet.legal.document.form</field>
        <field name="model">fleet.legal.document</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="sequence" invisible="1"/>
                            <field name="document_type"/>
                            <field name="name"/>
                            <field name="certificate_number" invisible="1"/>
                            <field name="issuing_authority" invisible="1"/>
                        </group>
                        <group>
                            <field name="document_date"/>
                            <field name="validity_date"/>
                            <field name="state" widget="badge" 
                                   decoration-success="state == 'active'"
                                   decoration-warning="state == 'expiring_soon'"
                                   decoration-danger="state == 'expired'"
                                   decoration-muted="state == 'revoked'"/>
                            <field name="vehicle_id"/>
                            <field name="upload_date" string="Thời gian upload" readonly="1" force_save="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Tệp đính kèm" name="attachments">
                            <field name="attachment_ids" widget="many2many_binary"/>
                        </page>
                        <page string="Ghi chú" name="notes">
                            <field name="note" placeholder="Thông tin bổ sung..."/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="fleet_legal_document_view_list" model="ir.ui.view">
        <field name="name">fleet.legal.document.list</field>
        <field name="model">fleet.legal.document</field>
        <field name="arch" type="xml">
            <list editable="bottom">
                <field name="sequence" widget="handle"/>
                <field name="document_type"/>
                <field name="name"/>
                <field name="document_date"/>
                <field name="validity_date"/>
                <field name="days_to_expire"
                       decoration-danger="days_to_expire &lt; 0"
                       decoration-warning="days_to_expire &gt;= 0 and days_to_expire &lt;= 30"/>
                <field name="state"
                       decoration-success="state == 'active'"
                       decoration-warning="state == 'expiring_soon'"
                       decoration-danger="state == 'expired'"
                       decoration-muted="state == 'revoked'"
                       widget="badge"/>
                <field name="upload_date" string="Thời gian upload" widget="datetime" readonly="1" force_save="1"/>
                <field name="vehicle_id" optional="hide"/>
            </list>
        </field>
    </record>

    <record id="fleet_legal_document_action" model="ir.actions.act_window">
        <field name="name">Giấy tờ hồ sơ</field>
        <field name="res_model">fleet.legal.document</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>
