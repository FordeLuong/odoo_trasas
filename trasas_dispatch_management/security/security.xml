<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Category: Quản lý Công văn -->
        <record model="ir.module.category" id="module_category_dispatch_management">
            <field name="name">Quản lý Công văn</field>
            <field name="description">Phân quyền truy cập module công văn.</field>
            <field name="sequence">20</field>
        </record>

        <!-- Privilege (New in Odoo 19) -->
        <record id="privilege_dispatch_management" model="res.groups.privilege">
            <field name="name">Quản lý Công văn</field>
            <field name="category_id" ref="module_category_dispatch_management"/>
            <field name="sequence">10</field>
        </record>

        <!-- Group: User (Văn thư/Nhân viên) -->
        <record id="group_dispatch_user" model="res.groups">
            <field name="name">Nhân viên/Văn thư</field>
            <field name="privilege_id" ref="privilege_dispatch_management"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
            <field name="comment">Quyền xem, tạo và xử lý công văn được giao.</field>
        </record>

        <!-- Group: HCNS (Hành chính - Nhân sự) -->
        <record id="group_dispatch_hcns" model="res.groups">
            <field name="name">Phòng HCNS</field>
            <field name="privilege_id" ref="privilege_dispatch_management"/>
            <field name="implied_ids" eval="[(4, ref('group_dispatch_user'))]"/>
            <field name="comment">Quyền tiếp nhận, phân công và xác nhận phản hồi công văn.</field>
        </record>

        <record id="group_dispatch_manager" model="res.groups">
            <field name="name">Quản lý</field>
            <field name="privilege_id" ref="privilege_dispatch_management"/>
            <field name="implied_ids" eval="[(4, ref('group_dispatch_hcns'))]"/>
            <field name="comment">Quyền quản trị đầy đủ: Cấu hình, Xóa, Phân quyền.</field>
        </record>

        <!-- Group: Portal (Người xử lý công văn qua Portal) -->
        <record id="group_dispatch_portal" model="res.groups">
            <field name="name">Portal - Người xử lý công văn</field>
            <field name="implied_ids" eval="[(4, ref('base.group_portal'))]"/>
            <field name="comment">Quyền xem và xử lý công văn được giao qua Portal.</field>
        </record>

        <!-- Record Rule: Portal users can only see their dispatches -->
        <!-- TEMPORARILY COMMENTED OUT INCOMING RULE
        <record id="dispatch_incoming_portal_rule" model="ir.rule">
            <field name="name">Portal: Own Dispatches Only</field>
            <field name="model_id" ref="model_trasas_dispatch_incoming"/>
            <field name="domain_force">[('handler_ids', 'in', [user.id])]</field>
            <field name="groups" eval="[(4, ref('base.group_portal'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>
        -->

        <!-- Admin automatically gets Manager rights -->
        <record id="base.group_system" model="res.groups">
            <field name="implied_ids" eval="[(4, ref('group_dispatch_manager'))]"/>
        </record>
    </data>
</odoo>
