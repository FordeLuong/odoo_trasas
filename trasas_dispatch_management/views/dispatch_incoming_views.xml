<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Search View -->
    <record id="view_trasas_dispatch_incoming_search" model="ir.ui.view">
        <field name="name">trasas.dispatch.incoming.search</field>
        <field name="model">trasas.dispatch.incoming</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="dispatch_number"/>
                <field name="sender_id"/>
            </search>
        </field>
    </record>

    <!-- Kanban View -->
    <record id="view_trasas_dispatch_incoming_kanban" model="ir.ui.view">
        <field name="name">trasas.dispatch.incoming.kanban</field>
        <field name="model">trasas.dispatch.incoming</field>
        <field name="arch" type="xml">
            <kanban default_group_by="state" class="o_kanban_small_column">
                <field name="name"/>
                <field name="dispatch_number"/>
                <field name="sender_id"/>
                <field name="deadline"/>
                <field name="priority"/>
                <field name="state"/>
                <field name="is_overdue"/>
                <field name="handler_ids"/>
                <templates>
                    <t t-name="card">
                        <div class="oe_kanban_card oe_kanban_global_click">
                            <div class="o_kanban_record_top">
                                <div class="o_kanban_record_headings">
                                    <strong class="o_kanban_record_title">
                                        <field name="name"/>
                                    </strong>
                                    <div class="o_kanban_record_subtitle text-muted">
                                        <field name="dispatch_number"/>
                                    </div>
                                </div>
                                <div class="o_kanban_record_top_right">
                                    <field name="priority" widget="priority"/>
                                </div>
                            </div>
                            <div class="o_kanban_record_body">
                                <field name="sender_id"/>
                                <div t-if="record.deadline.raw_value" class="text-muted">
                                    <i class="fa fa-clock-o"/> <field name="deadline"/>
                                </div>
                            </div>
                            <div class="o_kanban_record_bottom">
                                <div class="oe_kanban_bottom_left">
                                    <field name="handler_ids" widget="many2many_avatar_user"/>
                                </div>
                                <div class="oe_kanban_bottom_right">
                                    <span t-if="record.is_overdue.raw_value" class="badge text-bg-danger">
                                        Quá hạn
                                    </span>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- List View -->
    <record id="view_trasas_dispatch_incoming_tree" model="ir.ui.view">
        <field name="name">trasas.dispatch.incoming.list</field>
        <field name="model">trasas.dispatch.incoming</field>
        <field name="arch" type="xml">
            <list string="Công văn đến" 
                  decoration-danger="is_overdue" 
                  decoration-info="state == 'draft'" 
                  decoration-warning="state == 'waiting_confirmation'"
                  decoration-muted="state == 'done'"
                  default_order="date_received desc, priority desc">
                <field name="priority" 
                       decoration-warning="priority == 'urgent'"
                       decoration-danger="priority == 'very_urgent'"/>
                <field name="name"/>
                <field name="dispatch_number"/>
                <field name="extract_content" string="Trích yếu"/>
                <field name="sender_id"/>
                <field name="date_received"/>
                <field name="deadline" widget="remaining_days"/>
                <field name="handler_ids" widget="many2many_tags_avatar"/>
                <field name="state" widget="badge" 
                       decoration-info="state == 'draft'"
                       decoration-warning="state in ('processing', 'waiting_confirmation')"
                       decoration-success="state == 'done'"/>
                <field name="is_overdue" column_invisible="True"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_trasas_dispatch_incoming_form" model="ir.ui.view">
        <field name="name">trasas.dispatch.incoming.form</field>
        <field name="model">trasas.dispatch.incoming</field>
        <field name="arch" type="xml">
            <form string="Công văn đến">
                <header>
                    <!-- HCNS: Tiếp nhận công văn -->
                    <button name="action_confirm" string="Tiếp nhận" type="object" 
                            class="oe_highlight" 
                            invisible="state != 'draft'"
                            groups="trasas_dispatch_management.group_dispatch_hcns,trasas_dispatch_management.group_dispatch_manager"/>
                    
                    <!-- Người xử lý: Submit phản hồi -->
                    <button name="action_submit_response" string="Gửi phản hồi" type="object"
                            class="oe_highlight"
                            invisible="state != 'processing' or not response_required"/>
                    
                    <!-- HCNS: Xác nhận phản hồi -->
                    <button name="action_confirm_response" string="Xác nhận phản hồi" type="object"
                            class="oe_highlight"
                            invisible="state != 'waiting_confirmation'"
                            groups="trasas_dispatch_management.group_dispatch_hcns,trasas_dispatch_management.group_dispatch_manager"/>
                    
                    <!-- Manager/HCNS: Hoàn thành trực tiếp (công văn không cần phản hồi) -->
                    <button name="action_done" string="Hoàn thành" type="object"
                            class="oe_highlight"
                            invisible="state != 'processing' or response_required"
                            groups="trasas_dispatch_management.group_dispatch_hcns,trasas_dispatch_management.group_dispatch_manager"/>
                    
                    <button name="action_cancel" string="Hủy bỏ" type="object" 
                            invisible="state == 'cancel'"
                            groups="trasas_dispatch_management.group_dispatch_hcns,trasas_dispatch_management.group_dispatch_manager"/>
                    
                    <button name="action_draft" string="Về nháp" type="object" 
                            invisible="state == 'draft'"
                            groups="trasas_dispatch_management.group_dispatch_manager"/>
                    
                    <field name="state" widget="statusbar" 
                           statusbar_visible="draft,processing,waiting_confirmation,done"/>
                </header>
                <sheet>
                    <widget name="web_ribbon" title="Đã hoàn thành" bg_color="bg-success" invisible="state != 'done'"/>
                    <widget name="web_ribbon" title="Chờ xác nhận" bg_color="bg-warning" invisible="state != 'waiting_confirmation'"/>
                    <widget name="web_ribbon" title="Quá hạn" bg_color="bg-danger" invisible="not is_overdue"/>
                    <widget name="web_ribbon" title="Đã hủy" bg_color="bg-secondary" invisible="state != 'cancel'"/>

                    <div class="oe_title">
                        <h1 class="d-flex flex-row">
                            <field name="name" class="me-2"/>
                            <field name="dispatch_number" placeholder="Số hiệu văn bản gốc..." class="oe_inline"/>
                        </h1>
                    </div>

                    <group>
                        <group string="Thông tin văn bản">
                            <field name="sender_id"/>
                            <field name="type_id"/>
                            <field name="dispatch_date"/>
                            <field name="date_received"/>
                        </group>
                        <group string="Phân loại &amp; Lưu trữ">
                            <field name="dispatch_mode" widget="radio" options="{'horizontal': true}"/>
                            <field name="priority" widget="radio"/>
                            <field name="hard_copy_location" invisible="dispatch_mode != 'hard_copy'"/>
                            <field name="is_overdue" invisible="1"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Nội dung &amp; Xử lý" name="content_page">
                            <group>
                                <field name="extract_content" placeholder="Tóm tắt nội dung trích yếu..."/>
                            </group>
                            <group string="Thông tin xử lý">
                                <group>
                                    <field name="handler_ids" widget="many2many_tags_avatar" options="{'no_create': True}"/>
                                    <field name="deadline"/>
                                </group>
                                <group>
                                    <field name="response_required"/>
                                </group>
                            </group>
                            <group string="Ý kiến chỉ đạo">
                                <field name="directive_note" nolabel="1" placeholder="Nhập ý kiến chỉ đạo của Ban Giám đốc..."/>
                            </group>
                        </page>

                        <page string="Kết quả phản hồi" name="response_page" invisible="not response_required">
                            <group>
                                <group>
                                    <label for="response_dispatch_number"/>
                                    <div class="o_row">
                                        <field name="response_dispatch_number" placeholder="Số văn bản phản hồi..."/>
                                        <button name="action_generate_response_number"
                                                type="object"
                                                string="Lấy số"
                                                class="btn btn-link pt-0 pb-0"
                                                icon="fa-refresh"
                                                invisible="response_dispatch_number"/>
                                    </div>
                                    <field name="response_date"/>
                                </group>
                                <group>
                                    <field name="response_filename" invisible="1"/>
                                    <field name="response_file" widget="binary" filename="response_filename"/>
                                </group>
                            </group>
                            <field name="response_note" placeholder="Ghi chú kết quả xử lý..."/>
                        </page>

                        <page string="Đính kèm" name="attachment_page">
                            <field name="attachment_ids" widget="many2many_binary"/>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_trasas_dispatch_incoming" model="ir.actions.act_window">
        <field name="name">Công văn đến</field>
        <field name="res_model">trasas.dispatch.incoming</field>
        <field name="view_mode">kanban,list,form,activity</field>
        <field name="context">{'group_by': 'state'}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Tạo công văn đến mới
            </p>
            <p>
                Quản lý quy trình tiếp nhận và xử lý công văn đến.
            </p>
        </field>
    </record>
</odoo>
