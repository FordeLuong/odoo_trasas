<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Default Stages for Dispatch Incoming -->
        <record id="stage_draft" model="trasas.dispatch.stage">
            <field name="name">Mới</field>
            <field name="sequence">10</field>
            <field name="is_draft" eval="True"/>
        </record>

        <record id="stage_processing" model="trasas.dispatch.stage">
            <field name="name">Đang xử lý</field>
            <field name="sequence">20</field>
        </record>

        <record id="stage_waiting" model="trasas.dispatch.stage">
            <field name="name">Chờ xác nhận HCNS</field>
            <field name="sequence">30</field>
        </record>

        <record id="stage_done" model="trasas.dispatch.stage">
            <field name="name">Hoàn thành</field>
            <field name="sequence">40</field>
            <field name="is_done" eval="True"/>
            <field name="fold" eval="True"/>
        </record>

        <record id="stage_cancel" model="trasas.dispatch.stage">
            <field name="name">Đã hủy</field>
            <field name="sequence">50</field>
            <field name="is_cancel" eval="True"/>
            <field name="fold" eval="True"/>
        </record>
    </data>
</odoo>
