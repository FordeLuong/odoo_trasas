<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Sequence for Draft (Internal ID) -->
        <record id="seq_trasas_dispatch_outgoing_draft" model="ir.sequence">
            <field name="name">Mã nháp công văn đi</field>
            <field name="code">trasas.dispatch.outgoing.draft</field>
            <field name="prefix"></field>
            <field name="suffix">.%(y)s/Draft-TRS</field>
            <field name="padding">2</field>
            <field name="use_date_range">True</field>
            <field name="company_id" eval="False"/>
        </record>

        <!-- Sequence for Official Dispatch Number -->
        <record id="seq_trasas_dispatch_outgoing_official" model="ir.sequence">
            <field name="name">Số công văn đi chính thức</field>
            <field name="code">trasas.dispatch.outgoing.official</field>
            <field name="prefix"></field>
            <field name="suffix">.%(y)s/CV-TRS</field>
            <field name="padding">2</field>
            <field name="use_date_range">True</field>
            <field name="company_id" eval="False"/>
        </record>
    </data>
</odoo>
